<% provide(:title, @title) %>

<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= profile_pic_for @user %>
       <!-- <%= gravatar_for @user %> -->
        <%= @user.name %>
      </h1>
      </section>
      <section class="stats">
				<%= render 'shared/stats' %>
			</section>
  </aside>

<div class="col-md-8">
    <h2> <center> <%= @title %> </center> </h2>
     <% if @users.any? %>
       <ul class="users follow">
         <%= render @users %>
       </ul>

       <%= will_paginate @users %>
     <% end %>
   </div>
 </div>
