<% provide(:title, "Home") %>
<% if logged_in? %>
	<div class="row">
		<aside class="col-md-4">
			<section class="user_info">
				<%= render 'shared/user_info' %>
			</section>
			<section class="post_form">
				<%= render 'shared/post_form' %>
			</section>
		</aside>
		<aside class="col-md-8">
			<%= render 'shared/feed' %>
		</aside>
	</div>	
<% else %> 
	<div class="center jumbotron">
	<h1>MAXimum Music Sharing </h1>
		<p>Welcome to my custom Rails app, MAXimum Music! (I'll probably change the name soon because ew)</p>

			<%= link_to "Sign Up", signup_path, class: "btn btn-lg btn-primary" %>
		</div>
<% end %>
